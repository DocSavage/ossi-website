---
import { twMerge } from "tailwind-merge";

const { id, containerClass, bg, as = "section" } = Astro.props;

const WrapperTag = as;
---

<WrapperTag class="relative not-prose " {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none -z-[1]" aria-hidden="true">
    <slot name="bg">
      {bg && <Fragment set:html={bg} />}
    </slot>
  </div>
  <div
    class:list={[
      twMerge("relative mx-auto max-w-7xl px-4 md:px-6 py-8 md:py-12 lg:py-16 text-default", containerClass)
    ]}
  >
    <slot />
  </div>
</WrapperTag>
